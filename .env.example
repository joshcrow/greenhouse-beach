# Core identity
GREENHOUSE_SITE_NAME="Outer Banks Greenhouse"
GREENHOUSE_TIMEZONE="America/New_York"

# MQTT broker (internal to this docker-compose)
MQTT_HOST=mosquitto
MQTT_PORT=1883
MQTT_USERNAME=greenhouse
MQTT_PASSWORD=super-secret-change-me

# Database
DB_PATH=/app/data/db/greenhouse.db

# Narrative engine / AI
AI_MODEL=gemini-1.5-flash
AI_PROVIDER=google
AI_API_KEY=replace-with-real-key

# Email dispatch (for the Daily Dispatch)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-user
SMTP_PASSWORD=your-password
SMTP_FROM="Greenhouse Gazette <gazette@example.com>"
SMTP_TO="you@example.com"

# App-level security
SECRET_KEY=change-this-to-a-long-random-string
