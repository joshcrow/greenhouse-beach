{
  "site": {
    "name": "Outer Banks Greenhouse",
    "location": "Kill Devil Hills, NC",
    "timezone": "America/New_York"
  },
  "sensor_normalization": {
    "_comment": "Maps MQTT keys to logical display keys. HA bridge 'exterior' is physically INSIDE greenhouse.",
    "mappings": {
      "exterior_temp": "interior_temp",
      "exterior_humidity": "interior_humidity",
      "exterior_pressure": "interior_pressure",
      "satellite-2_temperature": "exterior_temp",
      "satellite-2_humidity": "exterior_humidity",
      "satellite-2_pressure": "exterior_pressure",
      "satellite-2_battery": "satellite_battery"
    },
    "conversions": {
      "_comment": "Satellite-2 reports in Fahrenheit from ESPHome, no conversion needed"
    }
  },
  "networks": {
    "home": {
      "ssid": "beachFi",
      "subnet": "192.168.1.0/24"
    },
    "iot": {
      "ssid": "GREENHOUSE_IOT",
      "subnet": "10.0.0.0/24",
      "gateway": "10.0.0.1"
    }
  },
  "devices": [
    {
      "type": "sensor_node",
      "device_name": "exterior_sensor",
      "friendly_name": "HA Bridge Sensor",
      "location": "greenhouse_interior",
      "network": "home",
      "topic_root": "greenhouse/exterior",
      "platform": "home_assistant",
      "_note": "Physically INSIDE greenhouse, but MQTT key is 'exterior' (legacy naming)",
      "sensors": [
        {
          "name": "Greenhouse Temperature",
          "mqtt_key": "exterior_temp",
          "logical_key": "interior_temp",
          "unit": "째F",
          "active": true
        },
        {
          "name": "Greenhouse Humidity",
          "mqtt_key": "exterior_humidity",
          "logical_key": "interior_humidity",
          "unit": "%",
          "active": true
        }
      ],
      "active": true
    },
    {
      "type": "sensor_node",
      "device_name": "satellite_sensor_2",
      "friendly_name": "Outdoor Satellite",
      "location": "greenhouse_exterior",
      "network": "iot",
      "topic_root": "greenhouse/satellite-2",
      "platform": "esphome",
      "hardware": "FireBeetle 2 ESP32-E",
      "_note": "Physically OUTSIDE greenhouse, solar-powered",
      "sensors": [
        {
          "name": "Outside Temperature",
          "mqtt_key": "satellite-2_temperature",
          "logical_key": "exterior_temp",
          "unit": "째C",
          "convert_to": "째F",
          "active": true
        },
        {
          "name": "Outside Humidity",
          "mqtt_key": "satellite-2_humidity",
          "logical_key": "exterior_humidity",
          "unit": "%",
          "active": true
        },
        {
          "name": "Pressure",
          "mqtt_key": "satellite-2_pressure",
          "logical_key": "exterior_pressure",
          "unit": "hPa",
          "active": true
        },
        {
          "name": "Satellite Battery",
          "mqtt_key": "satellite-2_battery",
          "logical_key": "satellite_battery",
          "unit": "V",
          "voltage_divider": 2.0,
          "active": true
        }
      ],
      "personality_context": "The Scout. A solar-powered sentinel monitoring outside conditions.",
      "active": true
    },
    {
      "type": "camera",
      "device_name": "greenhouse_camera",
      "friendly_name": "Greenhouse Camera",
      "location": "greenhouse_interior",
      "network": "home",
      "topic_root": "greenhouse/camera/main",
      "platform": "home_assistant",
      "ha_entity": "camera.greenhouse",
      "capture_interval_minutes": 60,
      "personality_context": "Hero image provider for daily dispatch",
      "active": true
    },
    {
      "type": "virtual",
      "device_name": "outside_weather",
      "friendly_name": "Beach Weather",
      "platform": "openweathermap",
      "ai_context": "Current external conditions from OpenWeatherMap API",
      "personality_context": "The Meteorologist",
      "active": true
    },
    {
      "type": "sensor_node",
      "device_name": "greenhouse_node_1",
      "friendly_name": "Indoor Station",
      "location": "greenhouse_interior",
      "network": "iot",
      "topic_root": "greenhouse/node/1",
      "platform": "esphome",
      "hardware": "ESP32 DevKit + BME280",
      "sensors": [
        {
          "name": "Greenhouse Temperature",
          "key": "temp",
          "unit": "째F",
          "active": false
        },
        {
          "name": "Greenhouse Humidity",
          "key": "humidity",
          "unit": "%",
          "active": false
        },
        {
          "name": "Greenhouse Pressure",
          "key": "pressure",
          "unit": "hPa",
          "active": false
        }
      ],
      "personality_context": "The Home Base. Primary indoor monitoring station.",
      "active": false,
      "_note": "Phase 2 deployment - requires additional ESP32 hardware"
    }
  ]
}
